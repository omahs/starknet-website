{
  "name": "root-workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn data; next dev",
    "build": "yarn data; next build",
    "start": "next start",
    "lint": "next lint",
    "fmt": "yarn rome:format",
    "rome:format": "rome format --write *.{ts,tsx,js} src workspaces/*/{src,*.js,.storybook}",
    "rome:check": "rome check .",
    "eslint:check": "eslint --cache .",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "yarn vitest run",
    "test:e2e": "start-server-and-test 'yarn dev' 3000 'yarn cy:open'",
    "test:e2e:ci": "start-server-and-test 'yarn dev' 3000 'yarn cy:run'",
    "typecheck": "tsc --noEmit",
    "cms": "yarn workspace netlify-cms-workspace dev",
    "data": "yarn workspace content-onedge-workspace update-dynamic-data",
    "update:algolia": "yarn workspace content-onedge-workspace update-algolia-index",
    "storybook:dev": "yarn workspace storybook-workspace dev",
    "storybook:build": "yarn workspace storybook-workspace build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "theme": "chakra-cli tokens src/style/theme.ts",
    "theme:watch": "chakra-cli tokens src/style/theme.ts --watch"
  },
